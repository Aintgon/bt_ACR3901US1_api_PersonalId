<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.acs.bletest.MainActivity">

    <!-- Terminal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terminal"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/activity_main_spinner_terminal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <Button
            android:id="@+id/activity_main_button_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan" />

        <Button
            android:id="@+id/activity_main_button_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list" />

        <Button
            android:id="@+id/activity_main_button_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disconnect" />
    </LinearLayout>

    <!-- Protocol -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/protocol"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/activity_main_checkbox_t0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t0" />

        <CheckBox
            android:id="@+id/activity_main_checkbox_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t1" />
    </LinearLayout>

    <!-- Control Code -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/control_code"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/activity_main_edit_text_control_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <!-- Script -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/script"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/activity_main_text_view_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_main_button_select_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_file" />

        <Button
            android:id="@+id/activity_main_button_transmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transmit" />

        <Button
            android:id="@+id/activity_main_button_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/control" />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_main_text_view_log"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:typeface="monospace" />
</LinearLayout>
